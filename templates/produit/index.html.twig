{% extends 'base.html.twig' %}

{% block title %}Dashboard Produits{% endblock %}

{% block MainContent %}
<div class="container">
    <h1>Dashboard Produits</h1>

    <!-- Statistiques et Graphiques -->
    <div class="row text-center">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h2 class="card-title">{{ total_produits | default('Non défini') }}</h2>
                    <p>Total des Produits</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h2 class="card-title">{{ total_ventes | default('Non défini') }}</h2>
                    <p>Ventes Totales</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h2 class="card-title">{{ stock_bas | default('Non défini') }}</h2>
                    <p>Stock Bas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h2 class="card-title">{{ problemes_critiques | default('Non défini') }}</h2>
                    <p>Problèmes Critiques</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Table des produits avec possibilité de pagination et recherche -->
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Type</th>
                    <th>Prix Initial</th>
                    <th>Marge</th>
                    <th>Vidéo</th>
                    <th>Audio</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% if produits is not empty %}
                {% for produit in produits %}
                <tr>
                    <td>{{ produit.id }}</td>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.type }}</td>
                    <td>{{ produit.prixInit }} €</td>
                    <td>{{ produit.marge }}%</td>
                    <td>{{ produit.video ? 'Oui' : 'Non' }}</td>
                    <td>{{ produit.audio ? 'Oui' : 'Non' }}</td>
                    <td><img src="/uploads/images/{{ produit.image }}" alt="{{ produit.nom }}" class="img-fluid" style="max-width: 155px;"></td>
                    <td>{{ produit.description | default('Non disponible') }}</td>
                    <td>
                         <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Voir</a>
                        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Modifier</a>
                        <form action="{{ path('app_produit_delete', {'id': produit.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');" style="display: inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="10">Aucun produit trouvé.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_produit_new') }}" class="btn btn-success"><i class="fas fa-plus"></i> Ajouter un nouveau produit</a>
</div>
{% endblock %}
